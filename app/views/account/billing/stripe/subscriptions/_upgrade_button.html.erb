<% classes ||= "" %>

<%= form_for subscription, url: [:upgrade, :account, subscription] do |form| %>
  <%= form.fields_for :generic_subscription do |generic_form| %>
    <%= generic_form.hidden_field "product_id", value: price.product.id %>
    <%= generic_form.hidden_field "price_id", value: price.id %>
  <% end %>
  <%= form.submit t(".select"), class: classes %>
<% end %>
